<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            app:iss_auto_cycle="true"
            app:iss_corner_radius="20"
            app:iss_delay="0"
            app:iss_period="1000"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="26dp">

        </com.denzcoskun.imageslider.ImageSlider>

        <TextView
            android:id="@+id/item_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:text="Name"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollViewMeasure"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:orientation="horizontal">
        <androidx.cardview.widget.CardView
    android:layout_width="150dp"
            app:cardBackgroundColor="@color/whiteTextColor"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/item_room_dlina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="dlina" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Төбенің биіктігі"
        />

</LinearLayout>

</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
        app:cardBackgroundColor="@color/whiteTextColor"
    android:layout_height="wrap_content">
     <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:orientation="vertical">

         <TextView
             android:id="@+id/item_room_shirina"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="20dp"
             android:textColor="@color/black"
             android:text="shirina" />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Залдың ұзындығы"

             />
     </LinearLayout>


</androidx.cardview.widget.CardView>

            </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>



        <TextView
        android:id="@+id/details_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
            android:textSize="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:lineSpacingExtra="8sp"

        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Фотографтар"

            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp">


            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:checkable="true"
                        android:id="@+id/card1"
                        android:backgroundTint="@color/whiteTextColor"
                        android:layout_marginLeft="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/button1"
                                android:layout_width="wrap_content"
                                android:layout_height="65dp"
                                android:layout_gravity="center"
                                android:src="@drawable/photographergirl"
                                android:text="New Button1" />

                            <TextView
                                android:id="@+id/photographer1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColorLink="@color/black"
                                android:textAlignment="center"
                                android:linksClickable="true"
                                android:clickable="true"
                                android:text="@string/photograph1">

                            </TextView>
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:checkable="true"
                        android:id="@+id/card2"
                        android:backgroundTint="@color/whiteTextColor"
                        android:layout_marginLeft="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/button2"
                                android:layout_width="wrap_content"
                                android:layout_height="65dp"
                                android:layout_gravity="center"
                                android:src="@drawable/photographerboy"
                                android:text="New Button1" />

                            <TextView
                                android:id="@+id/photographer2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:clickable="true"
                                android:textColorLink="@color/black"
                                android:text="@string/photograph2">

                            </TextView>
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:checkable="true"
                        android:backgroundTint="@color/whiteTextColor"
                        android:id="@+id/card3"
                         android:layout_marginLeft="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/button3"
                                android:layout_width="wrap_content"
                                android:layout_height="65dp"
                                android:layout_gravity="center"
                                android:src="@drawable/photographerboy"
                                android:text="New Button1" />

                            <TextView
                                android:id="@+id/photographer3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:textAlignment="center"
                                android:textColorLink="@color/black"
                                android:text="@string/photograph3">

                            </TextView>
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:checkable="true"
                        android:id="@+id/card4"
                        app:cardBackgroundColor="@color/whiteTextColor"
                        android:layout_marginLeft="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/button4"
                                android:layout_width="wrap_content"
                                android:layout_height="65dp"
                                android:layout_gravity="center"
                                android:src="@drawable/photographergirl"
                                android:text="New Button1" />

                            <TextView
                                android:id="@+id/photographer4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:textColorLink="@color/black"
                                android:clickable="true"
                                android:text="@string/photograph4">

                            </TextView>
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="1 сағат құны"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/item_room_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:text="price" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:text="тг" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>